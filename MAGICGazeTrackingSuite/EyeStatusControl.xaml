<UserControl x:Class="MAGICGazeTrackingSuite.EyeStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:TrackBox="clr-namespace:TETControls.TrackBox;assembly=TETControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Grid x:Name="TrackingStatusGrid">
            <TrackBox:TrackBoxStatus x:Name="trackingStatus"
                Width="300"
                Height="250"
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
            />
        </Grid>
    </Grid>
</UserControl>
